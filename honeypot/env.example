# ============================================================================
# Honeypot Environment Configuration
# Copy this file to .env and fill in your values
# ============================================================================

# Upstream Server (the real server being protected by the honeypot proxy)
# In Docker, use the container name or host.docker.internal for host machine
UPSTREAM_URL=http://host.docker.internal:3000

# Database Configuration (External MongoDB)
# Example: mongodb+srv://user:password@cluster.mongodb.net/dbname
MONGO_URI=mongodb://localhost:27017
DB_NAME=shadow_guardian

# Groq API Configuration (Required for LLM features)
GROQ_API_KEY=your_groq_api_key_here

# Honeypot Configuration
HONEYPOT_NAME=QuantumShield
SYSTEM_PERSONA=Ubuntu 22.04 LTS

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# LLM Configuration
LLM_MODEL=openai/gpt-oss-20b
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=100000

# Email Alert Configuration (SendGrid)
# Set ENABLE_EMAIL_ALERTS=false to disable email notifications
ENABLE_EMAIL_ALERTS=true
SENDGRID_API_KEY=your_sendgrid_api_key_here
ALERT_FROM_EMAIL=alerts@yourdomain.com
ALERT_TO_EMAIL=security@yourdomain.com

# Slack Alert Configuration
# Set ENABLE_SLACK_ALERTS=true to enable Slack notifications
# Get webhook URL from: https://api.slack.com/messaging/webhooks
ENABLE_SLACK_ALERTS=false
SLACK_WEBHOOK_URL=<your-slack-webhook-url-here>
SLACK_CHANNEL=#security-alerts

